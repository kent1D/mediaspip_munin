#!/bin/bash
dossier_mediaspip=/var/www/mediaspip/sites/

exclure="*([0-9a-f]{32}\.[a-z0-9]{3}|\.ok|-[0-9]{1,3}\.[0-9a-z]{3}|\-encoded\.[0-9a-z]{3}|\-encoded\.[0-9a-z]{3})$"

find ${dossier_mediaspip} -mindepth 4 -maxdepth 4 -path "*/IMG/*" -type f | egrep -v "$exclure" > /tmp/mediaspip_comptage.log

mv /tmp/mediaspip_comptage.log /usr/local/log/mediaspip_comptage.log
