#!/usr/bin/awk -f

BEGIN {
	FS=" "
	video=0
	audio=0
	photo=0
	document=0
}

$2 == "mp4" { video+=$1; }
$2 == "flv" { video+=$1; }
$2 == "ogv" { video+=$1; }
$2 == "mov" { video+=$1; }
$2 == "mpg" { video+=$1; }
$2 == "avi" { video+=$1; }
$2 == "wmv" { video+=$1; }
$2 == "webm" { video+=$1; }
$2 == "3gp" { video+=$1; }


$2 == "ogg" { audio+=$1; }
$2 == "mp3" { audio+=$1; }
$2 == "oga" { audio+=$1; }
$2 == "wav" { audio+=$1; }
$2 == "mid" { audio+=$1; }

$2 == "jpg" { photo+=$1; }
$2 == "png" { photo+=$1; }
$2 == "gif" { photo+=$1; }


$2 == "pdf" { document+=$1; }
$2 == "odt" { document+=$1; }
$2 == "odp" { document+=$1; }
$2 == "doc" { document+=$1; }
$2 == "xls" { document+=$1; }


END {
	print "video", video;
	print "audio", audio;
	print "photo", photo;
	print "document", document;
}
